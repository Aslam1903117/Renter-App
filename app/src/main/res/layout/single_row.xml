<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/house_name"
            android:text="Name:"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#000"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/house_for"
            android:text="For:"
            android:textSize="23dp"
            android:layout_below="@+id/house_name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/house_rent"
            android:text="Rent:"
            android:textSize="23dp"
            android:layout_below="@+id/house_for"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/owners_phone"
            android:text="Phone:"
            android:textSize="23dp"
            android:layout_below="@+id/house_rent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/house_location"
            android:text="Location:"
            android:textSize="23dp"
            android:layout_below="@+id/owners_phone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/house_description"
            android:text="Description:"
            android:textSize="23dp"
            android:layout_below="@+id/house_location"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>